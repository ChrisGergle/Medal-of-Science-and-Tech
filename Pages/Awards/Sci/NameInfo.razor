@code {
    [Parameter]
    public string? Name { get; set; }

    [Parameter]
    public string? ReturnVal { get; set; }

    public string? NameWritten;
    public string? School;
    public string? Titles;
    public string? Honorific;

    private string Output(string x)
    {
        switch (x)
        {
            case "Name":
                return NameWritten;
            case "School":
                return School;
            case "Title":
                return Titles;
            case "Honorific":
                return Honorific;

            case "name":
                return NameWritten;
            case "school":
                return School;
            case "title":
                return Titles;
            case "honorific":
                return Honorific;
            case "honorifics":
                return Honorific;
            case "Honorifics":
                return Honorific;

            case "titles":
                return Titles;
            case "Titles":
                return Titles;
        }
        return "";
    }
}
